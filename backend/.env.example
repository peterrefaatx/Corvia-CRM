# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/corvia_crm"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# JWT Secrets - MUST BE CHANGED IN PRODUCTION
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_64_CHARS_MIN"
JWT_REFRESH_SECRET="CHANGE_THIS_TO_A_DIFFERENT_SECURE_RANDOM_STRING_64_CHARS_MIN"

# Server Configuration
NODE_ENV=development
PORT=3000

# Frontend URL
FRONTEND_URL="http://localhost:5173"

# Timezone for scheduled jobs
# Examples: Africa/Cairo, Europe/London, Asia/Dubai, America/New_York
# See: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ="Africa/Cairo"
